menuconfig ADNS3000
	bool "Pixart ADNS-3000 optical mouse sensor"
	depends on SPI
	default n
	help
	  Pixart ADNS-3000 optical mouse sensor

config ADNS3000_NAME
	string 
	prompt "Driver's name"
	depends on ADNS3000
	default "ADNS3000"

config ADNS3000_SPI_PORT_NAME
	string "SPI master controller port name"
	depends on ADNS3000
	default "SPI_1"
	help
	  Master SPI port name through which ADNS3000 chip is accessed.

config ADNS3000_SLAVE
	hex "ADNS3000 SPI slave select pin"
	depends on ADNS3000
	default 23
	help
	  ADNS3000 chip select pin.

config ADNS3000_SPI_BUS_FREQ
	int "ADNS3000 SPI bus speed in Hz"
	default 640000
	depends on ADNS3000
	help
	  This is the maximum supported SPI bus frequency. The chip supports a
	  frequency up to 10MHz.

choice
	prompt "Trigger mode"
	depends on ADNS3000
	default ADNS3000_TRIGGER_NONE
	help
	  Specify the type of triggering to be used by the driver.

config ADNS3000_TRIGGER_NONE
	bool
	prompt "No trigger"

config ADNS3000_TRIGGER_GLOBAL_THREAD
	bool "Use global thread"
	select ADNS3000_TRIGGER

config ADNS3000_TRIGGER_OWN_THREAD
	bool "Use own thread"
	select ADNS3000_TRIGGER
endchoice

config ADNS3000_TRIGGER
	bool
	default n
	depends on ADNS3000

config ADNS3000_THREAD_PRIORITY
	int "Own thread priority"
	depends on ADNS3000 && ADNS3000_TRIGGER_OWN_THREAD
	default 10
	help
	  The priority of the thread used for handling interrupts.

config ADNS3000_THREAD_STACK_SIZE
	int "Own thread stack size"
	depends on ADNS3000 && ADNS3000_TRIGGER_OWN_THREAD
	default 1024
	help
	  The thread stack size.

config ADNS3000_GPIO_DEV_NAME
	string "Gpio device"
	default "GPIO_NRF5_P0"
	depends on ADNS3000 && ADNS3000_TRIGGER
	help
	  The name of the GPIO device to which the ADNS3000 interrupt pin is
	  connected.

config ADNS3000_GPIO_PIN_NUM
	int "Interrupt GPIO pin number"
	default 8
	depends on ADNS3000 && ADNS3000_TRIGGER
	help
	  The number of the GPIO pin which is connected to ADNS3000 interrupt pin.

